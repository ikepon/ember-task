<form class="form-horizontal form-group form-group-lg row">
  <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-1 col-md-5 col-md-offset-2">
    {{input type="text" value=model.title class="form-control" placeholder="タスクのタイトルを入れてください" autofocus="autofocus"}}
    {{textarea class="form-control" placeholder="タスクの内容を入れてください。" rows="7" value=model.description}}
    <button class="btn btn-primary btn-lg btn-block" disabled={{isDisabled}}>保存する</button>
  </div>
</form>
